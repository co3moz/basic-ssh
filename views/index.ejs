<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>

<body>

<header>
    <% include ./partials/header %>
</header>
<div class="container">
    <main>
        <div class="jumbotron">
            <h1>Welcome <%= user %></h1>
            <p>
                You have control of these machines;
            </p>

            <ul>
                <% servers.forEach(function(server) { %>
                    <li><%=server.name%> at <%=server.login%>@<%=server.ip%></li>
                <% }); %>
            </ul>
        </div>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>
</div>
</body>
</html>